<header>
  <% if logged_in? %>
    <nav class="round" id="left">
      <ul>
        <li>Hello <%= link_to current_user.name, current_user %></li>
      </ul>
    </nav>
  <% end %>
  <nav class="round" id="right">
    <ul>
      <% if !current_page?(root_path) %>
        <li><%= link_to "Wish Lists", root_path %></li>
      <% end %>
      <% if logged_in? %>
        <% if current_user.admin? %>
          <li><%= link_to "Admin", pages_admin_path %>
        <% end %>
        <li><%= link_to "Account", edit_user_path(current_user) %></li>
        <li><%= link_to "Log Out", logout_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Log In", login_path %></li>
      <% end %>
    </ul>
  </nav>
</header>